{
  "description": "MailVoyage - A modern email client",
  "name": "mailvoyage",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:web": "vite",
    "dev:api": "npm --prefix api run dev",
    "dev": "concurrently \"npm:dev:web\" \"npm:dev:api\"",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "install:api": "npm --prefix api install",
    "install:web": "npm install",
    "install": "npm install && npm run install:api"
  },
  "dependencies": {
    "@ckeditor/ckeditor5-react": "^11.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "ckeditor5": "^46.1.1",
    "dompurify": "^3.2.7",
    "framer-motion": "^12.9.2",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.503.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.1",
    "react-router-dom": "^7.5.2",
    "react-toastify": "^11.0.5",
    "tailwind-animate": "^0.2.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@tailwindcss/postcss": "^4.1.4",
    "@types/dompurify": "^3.0.5",
    "@types/imapflow": "^1.0.21",
    "@types/node": "^22.15.2",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1"
  }
}
