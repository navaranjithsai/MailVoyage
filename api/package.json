{
  "name": "mailvoyage-api",
  "version": "2026.2.1",
  "description": "Backend API for MailVoyage - Email client REST API with WebSocket support",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc && npm run migrate:latest",
    "build:only": "tsc",
    "dev:watch": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only --exit-child --esm src/index.ts",
    "dev": "cross-env NODE_ENV=development npm run migrate:latest && cross-env NODE_ENV=development node --loader ts-node/esm src/index.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "start": "cross-env NODE_ENV=production npm run migrate:latest && node dist/index.js",
    "typecheck": "tsc --noEmit",
    "knex": "cross-env NODE_ENV=development NODE_OPTIONS=\"--loader ts-node/esm\" knex --knexfile knexfile.ts",
    "migrate:make": "npm run knex -- migrate:make -x ts",
    "migrate:latest": "npm run knex -- migrate:latest",
    "migrate:rollback": "npm run knex -- migrate:rollback",
    "seed:make": "npm run knex -- seed:make -x ts",
    "seed:run": "npm run knex -- seed:run",
    "clean": "rimraf dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "dotenv-safe": "^9.1.0",
    "express": "^5.2.1",
    "imapflow": "^1.0.198",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.7.4",
    "morgan": "^1.10.0",
    "node-pop3": "^0.11.0",
    "nodemailer": "^8.0.1",
    "pg": "^8.15.6",
    "winston": "^3.19.0",
    "ws": "^8.18.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/dotenv-safe": "^9.1.0",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mailparser": "^3.4.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^25.0.9",
    "@types/nodemailer": "^7.0.9",
    "@types/pg": "^8.11.14",
    "@types/ws": "^8.18.1",
    "knex": "^3.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
