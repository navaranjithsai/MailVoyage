{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "mailvoyage-api",
  "version": "1.0.0",
  "description": "Backend API for MailVoyage",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run migrate:latest",
    "dev:watch": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only --exit-child --esm src/index.ts",
    "dev": "cross-env NODE_ENV=development npm run migrate:latest && cross-env NODE_ENV=development node --loader ts-node/esm src/index.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "start": "cross-env NODE_ENV=production npm run migrate:latest && node dist/index.js",
    "knex": "cross-env NODE_ENV=development NODE_OPTIONS=\"--loader ts-node/esm\" knex --knexfile knexfile.ts",
    "migrate:make": "npm run knex -- migrate:make -x ts",
    "migrate:latest": "npm run knex -- migrate:latest",
    "migrate:rollback": "npm run knex -- migrate:rollback",
    "seed:make": "npm run knex -- seed:make -x ts",
    "seed:run": "npm run knex -- seed:run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "dotenv-safe": "^9.1.0",
    "express": "^4.19.2",
    "imapflow": "^1.0.163",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.7.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.14",
    "pg": "^8.15.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/dotenv-safe": "^8.1.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/knex": "^0.15.2",
    "@types/mailparser": "^3.4.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.10",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.11.14",
    "@types/winston": "^2.4.4",
    "knex": "^3.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.3"
  }
}
